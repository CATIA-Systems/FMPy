<?xml version="1.0" encoding="UTF-8"?>
<fmiModelDescription
  fmiVersion="2.0"
  modelName="{{modelName}}"
  guid=""
{% if description %}
  description="{{description}}"
{% endif %}
  generationTool="FMPy {{fmpyVersion}} FMU Container"
  generationDateAndTime="{{generationDateAndTime}}"
  variableNamingConvention="structured">

  <CoSimulation modelIdentifier="FMUContainer">
    <SourceFiles>
      <File name="FMUContainer.c"/>
      <File name="mpack.c"/>
    </SourceFiles>
  </CoSimulation>

  <ModelVariables>
{% for variable in system.variables %}
    <ScalarVariable name="{{variable.name}}" valueReference="{{loop.index0}}"{% if variable.variability %} variability="{{variable.variability}}"{% endif %}{% if variable.causality %} causality="{{variable.causality}}"{% endif %}{% if variable.initial %} initial="{{variable.initial}}"{% endif %}{% if variable.description %} description="{{variable.description}}"{% endif %}>
      <{{variable.type}}{% if variable.start %} start="{{variable.start}}"{% endif %}/>
    </ScalarVariable>
{% endfor %}
  </ModelVariables>

  <ModelStructure>
    <Outputs>
{% for variable in system.variables %}
{% if variable.causality == 'output' %}
      <Unknown index="{{loop.index}}"/>
{% endif %}
{% endfor %}
    </Outputs>
    <InitialUnknowns>
{% for variable in system.variables %}
{% if variable.causality == 'output' %}
      <Unknown index="{{loop.index}}"/>
{% endif %}
{% endfor %}
    </InitialUnknowns>
  </ModelStructure>

</fmiModelDescription>
